// this converted from Fahrenheit to Celsius
function toCelsius(fahrenheit){
  let conversion = (fahrenheit - 32) / 1.8;
  console.log('You gave us ' + fahrenheit +' degrees Fahrenheit, and that converts to ' + conversion +' degrees Celsius.');
}
toCelsius(32);

// this converted from Celsius to Fahrenheit
function toFahrenheit(celsius){
  let conversion = celsius * 1.8 + 32;
  console.log('You gave us ' + celsius +' degrees Celsius, and that converts to ' + conversion +' degrees Fahrenheit.');
}
toFahrenheit(6);

// this converted from Fahrenheit to Celsius with the` instead of the "'s
function toCelsius(fahrenheit){
  let conversion = (fahrenheit - 32) / 1.8;
  console.log(`You entered ${fahrenheit} degrees Fahrenheit. That converts to ${conversion} degrees Celsius.`);
}
toCelsius(23);
